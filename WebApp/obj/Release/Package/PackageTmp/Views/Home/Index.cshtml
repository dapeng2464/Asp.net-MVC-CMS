			    <a class="linkBtn" onclick="addTab('Note', '/Note/index', '')">Note</a>
		    </div>
            <div title="User Management" style="padding:10px;">
			    <a class="linkBtn" onclick="addTab('User', '/User/index', '')">User</a>
		    </div>
            <div title="File Management" style="padding:10px;">
			    <a class="linkBtn" onclick="addTab('File', '/File/index', '')">File</a>
		    </div>
		    @*<div title="Hidden-tree" style="padding:10px;">
			    <div id="RightTree" style=" background-color:#fff;display:none" >
                    <div class="panel-loading">Loading...</div>
                </div>
		    </div>*@
		    
	    </div>
        
    </div>
    <div data-options="region:'south',border:false" style="height: 20px;">
        <div class="define-bottom">
            

        </div>
    </div>
    <div data-options="region:'center',border:false">
        <div id="mainTab" class="easyui-tabs" data-options="fit:true">
            <div title="Home Page" data-options="closable:true" style="overflow: hidden; background:#fff">
               @* <iframe scrolling="auto" frameborder="0" src="/SysSample/GridTable" style="width: 100%; height: 100%;"></iframe>*@
                <iframe scrolling="auto" frameborder="0" src="/Welcome/Index" style="width: 100%; height: 100%;"></iframe>
            </div>
        </div>
    </div>
    <div id="tab_menu" class="easyui-menu" style="width: 150px;">
        <div id="tab_menu-tabrefresh" data-options="iconCls:'icon-reload'">
            Refresh</div>
        <div id="tab_menu-openFrame">
           Open in new window</div>
        <div id="tab_menu-tabcloseall">
            Close all</div>
        <div id="tab_menu-tabcloseother">
            Close all except this</div>
        <div class="menu-sep">
        </div>
        <div id="tab_menu-tabcloseright">
           Close all right</div>
        <div id="tab_menu-tabcloseleft">
           Close all left</div>
        <div id="tab_menu-tabclose" data-options="iconCls:'icon-remove'">
          Close</div>
        <div id="menu" class="easyui-menu" style="width: 150px;">
        </div>
    </div>
</body>
</html>
